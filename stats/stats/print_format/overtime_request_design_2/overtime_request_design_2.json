 "html": "{%- from \"templates/print_formats/standard_macros.html\" import add_header, render_field, print_value, fieldmeta, get_width, get_align_class with context -%}\n\n{% if print_settings.repeat_header_footer %}\n    <div id=\"header-html\">\n        {% if letter_head and not no_letterhead %}\n            <div class=\"letter-head\">{{ letter_head }}</div>\n        {% else%}\n             <div>\n               <table>\n                <tr></tr>\n               </table>\n               </div>\n        {% endif %}\n   </div>\n{% endif %}\n\n<!DOCTYPE html>\n<html lang=\"ar\">\n    \n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n</head>\n\n<body>\n\n<div>\n    {% if doc.sub_department != None %}\n        {% set department = frappe.db.get_value(\"Department\", doc.sub_department, \"department_name\")%}\n    {% else %}\n        {% set department = frappe.db.get_value(\"Department\", doc.main_department, \"department_name\")%}\n    {% endif %}\n        <h3 class=\"text-center\" style=\"margin-bottom:20px;\">\u0628\u064a\u0627\u0646 \u0628\u0623\u0633\u0645\u0627\u0621 \u0627\u0644\u0645\u0648\u0638\u0641\u064a\u0646 \u0627\u0644\u0645\u0643\u0644\u0641\u064a\u0646 \u0628\u0627\u0644\u0639\u0645\u0644 \u0627\u0644\u0625\u0636\u0627\u0641\u064a \u0641\u064a \u0625\u062f\u0627\u0631\u0629 {{  _(department)}}</h3>\n        \n         <!--table-->\n        <table style=\"width:100%; color:black; font-size:16px; border:1px solid black; font-weight:bold;\">\n            <tr>\n                <th rowspan=\"2\" style=\"border:1px solid black; text-align:center; vertical-align:middle;\">\u0639\u062f\u062f</th>\n                <th rowspan=\"2\" style=\"border:1px solid black; text-align:center; vertical-align:middle;\">\u0627\u0644\u0627\u0633\u0645</th>\n                <th rowspan=\"2\" style=\"border:1px solid black; text-align:center; vertical-align:middle;\">\u0627\u0644\u0645\u0631\u062a\u0628\u0629</th>\n                <th rowspan=\"2\" style=\"border:1px solid black; text-align:center; vertical-align:middle;\">\u0627\u0644\u0631\u0627\u062a\u0628 \u0627\u0644\u0627\u0633\u0627\u0633\u064a</th>\n                <th rowspan=\"2\" style=\"border:1px solid black; text-align:center; vertical-align:middle;\">\u0627\u0644\u0631\u0627\u062a\u0628 \u0627\u0644\u0641\u0639\u0644\u064a</th>\n                <th colspan=\"2\" style=\"border:1px solid black; text-align:center; vertical-align:middle;\">\u0627\u0644\u0623\u064a\u0627\u0645 \u0627\u0644\u0641\u0639\u0644\u064a\u0629</th>\n            </tr>\n            \n            <tr>\n                <th style=\"border:1px solid black; text-align:center; vertical-align:middle;\">\u0639\u0627\u062f\u064a\u0629</th>\n                <th style=\"border:1px solid black; text-align:center; vertical-align:middle;\">\u0639\u0637\u0644</th>\n            </tr>\n            \n            {%for row in doc.employee_overtime_request %}\n                {% set total_salary = frappe.db.get_value(\"Salary Structure Assignment\", {\"employee\" : row.employee_no }, \"base\")%}\n                \n                {% set salary_structure = frappe.db.get_value(\"Salary Structure Assignment\", {\"employee\" : row.employee_no }, \"salary_structure\")%}\n                {% set salary_doc = frappe.get_doc(\"Salary Structure\", salary_structure) %}\n            \n                <tr>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle;\">{{ loop.index }}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle;\">{{ row.employee_name }}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle;\">{{ row.employee_contract_name}}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle;\">{{\"%.2f\"|format(total_salary)}}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle;\">{{ \"%.2f\"|format(salary_doc.earnings[0].amount) }}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle;\">{%if doc.day_type == \"Week Days\" %} {{ row.total_no_of_days }} {% else %} 0 {%endif%}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle;\">{%if doc.day_type == \"Off-Days\" %} {{ row.total_no_of_days }} {% else %} 0 {%endif%}</td>\n                </tr>\n            {% endfor %}\n        </table>\n    </div>\n    \n    </body>\n\n</html>\n\n{% if print_settings.repeat_header_footer %}\n<div id=\"footer-html\">\n    {% if footer %}\n    <div class=\"letter-head-footer\"> {{ footer }} </div>\n    {% endif %}\n    <p class=\"text-center small page-number visible-pdf\">\n        {{ _(\"Page {0} of {1}\").format('<span class=\"page\"></span>', '<span class=\"topage\"></span>') }} </p>\n</div>\n{% endif %}",
