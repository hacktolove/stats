 "html": "{%- from \"templates/print_formats/standard_macros.html\" import add_header, render_field, print_value, fieldmeta, get_width, get_align_class with context -%}\n\n{% if print_settings.repeat_header_footer %}\n    <div id=\"header-html\">\n        {% if letter_head and not no_letterhead %}\n            <div class=\"letter-head\">{{ letter_head }}</div>\n        {% else%}\n             <div>\n               <table>\n                <tr></tr>\n               </table>\n               </div>\n        {% endif %}\n   </div>\n{% endif %}\n\n\n<!DOCTYPE html>\n<html lang=\"ar\">\n    \n    <head>\n        <meta charset=\"UTF-8\">\n        <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    </head>\n    \n    <body style=\"font-size:12pt; color:black;\">\n        <!--Heading-->\n        <div style=\"text-align:center; margin-top:15px;\">\n            <span style=\"font-weight:bold; font-size:12pt; text-align:center; padding:10px; border:1px solid black; background-color:#D3D3D3;\">\n                  \u062a\u0640\u0642\u0640\u0631\u064a\u0640\u0631 \u0646\u0640\u0647\u0640\u0627\u064a\u0640\u0629 \u0627\u0644\u0640\u062a\u0640\u0643\u0640\u0644\u0640\u064a\u0640\u0641\u200c\u200c \n\u0628\u0640\u0627\u0644\u0640\u0639\u0640\u0645\u0640\u0644 \u0627\u0644\u0625\u0636\u0640\u0627\u0641\u0640\u064a     \n            </span>           \n        </div>\n        \n        {% set overtime_creation_date = frappe.db.get_value(\"Overtime Request ST\", doc.overtime_reference, \"creation_date\")%}\n        {% if doc.sub_department != None %}\n            {% set department_name = frappe.db.get_value(\"Department\", doc.sub_department, \"department_name\")%}\n        {% else %}\n            {% set department_name = frappe.db.get_value(\"Department\", doc.main_department, \"department_name\")%}\n        {% endif %}\n        <p style='font-size:12pt; color:black; font-weight:bold; line-height:1.5; margin-top:30px;'>\n            \u0628\u0645\u0648\u062c\u0628 \u0627\u0644\u0642\u0631\u0627\u0631 \u0627\u0644\u0625\u062f\u0627\u0631\u064a \u0631\u0642\u0645 \u200c\u200c{{ doc.overtime_reference }} \u0648\u062a\u0627\u0631\u064a\u062e \u200c\u200c\u200c{{ overtime_creation_date.strftime(\"%d-%m-%Y\") }} \u0648\u0627\u0644\u062e\u0627\u0635 \u0628\u062a\u0643\u0644\u064a\u0641 \u0645\u0648\u0638\u0641\u064a  {{ department_name }}\n        </p>\n        \n        <p  style='font-size:12pt; color:black; font-weight:bold; line-height:1.5; margin-top:15px;'>\n            \u0628\u0627\u0644\u0639\u0645\u0644 \u0627\u0644\u0625\u0636\u0627\u0641\u064a \u0648\u0630\u0644\u0643 \u0644\u063a\u0631\u0636 : \n        </p>\n        \n        {% set request_reason = frappe.db.get_value(\"Overtime Request ST\", doc.overtime_reference, \"request_reason\")%}\n        <p  style='font-size:12pt; color:black; font-weight:bold; line-height:1.5; margin-top:10px;'>\n            {{ request_reason|replace(\"\\n\", \"<br>\") }} \n        </p>\n        \n        <p  style='font-size:12pt; color:black; font-weight:bold; line-height:1.5; margin-top:10px;'>\n        \u0648\u0641\u0642\u0627\u064b \u0644\u0644\u0628\u064a\u0627\u0646\u0627\u062a \u0627\u0644\u0648\u0627\u0631\u062f\u0629 \u0641\u064a \u0627\u0644\u0628\u064a\u0627\u0646 \u0627\u062f\u0646\u0627\u0647 : \n        </p>\n    \n    \n        <table style=\"width:100%; color:black; font-size:16px; border:1px solid black; font-weight:bold; margin:30px 0px;\">\n            <tr>\n                <th rowspan=\"2\" style=\"border:1px solid black; text-align:center; vertical-align:middle !important; width:5%;\">#</th>\n                <th rowspan=\"2\" style=\"border:1px solid black; text-align:center; vertical-align:middle !important; width:30%\">\u0627\u0633\u0645 \u0627\u0644\u0645\u0648\u0638\u0641</th>\n                <th rowspan=\"2\" style=\"border:1px solid black; text-align:center; vertical-align:middle !important; width:10%\">\u0627\u0644\u0645\u0631\u062a\u0628\u0629</th>\n                <th colspan=\"2\" style=\"border:1px solid black; text-align:center; vertical-align:middle !important; width:30%\">\u0645\u062f\u0629 \u0627\u0644\u062a\u0643\u0644\u064a\u0641 </th>\n                <th colspan=\"2\" style=\"border:1px solid black; text-align:center; vertical-align:middle !important; width:15%\">\u0627\u0644\u0623\u064a\u0627\u0645\n\u0627\u0644\u0641\u0639\u0644\u064a\u0629</th>\n                <th rowspan=\"2\" style=\"border:1px solid black; text-align:center; vertical-align:middle !important; width:10%\">\u0639\u062f\u062f\u200c\u200c \n\u0627\u0644\u0633\u0627\u0639\u0627\u062a </th>\n            </tr>\n            \n            <tr>\n               <th style=\"border:1px solid black; text-align:center; vertical-align:middle !important;\">\u0645\u0646 </th>\n                <th style=\"border:1px solid black; text-align:center; vertical-align:middle !important;\">\u0627\u0644\u0649 </th>\n                 <th style=\"border:1px solid black; text-align:center; vertical-align:middle !important;\">\u0639\u0645\u0644 \n </th>\n                <th style=\"border:1px solid black; text-align:center; vertical-align:middle !important; \">\u0639\u0637\u0644 </th>\n            </tr>\n            \n            {% set ordoc = frappe.get_doc(\"Overtime Request ST\", doc.overtime_reference)%}\n            {%for row in doc.overtime_approval_employee_details %}\n                <tr>\n                    {% set grade = frappe.db.get_value(\"Employee\", row.employee_no, \"grade\")%}\n                        \n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle !important;\">{{ loop.index }}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle !important;\">{{ row.employee_name }}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle !important;\">{{ grade }}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle !important;\">{{ frappe.utils.getdate(doc.overtime_start_date).strftime(\"%d-%m-%Y\") }}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle !important;\">{{ frappe.utils.getdate(doc.overtime_end_date).strftime(\"%d-%m-%Y\") }}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle !important;\">{%if ordoc.day_type == \"Week Days\" %} {{ row.approved_days }} {% else %} 0 {%endif%}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle !important;\">{%if ordoc.day_type == \"Off-Days\" %} {{ row.approved_days }} {% else %} 0 {%endif%}</td>\n                    <td style=\"border:1px solid black; text-align:center; vertical-align:middle !important;\">{{ ordoc.employee_overtime_request[loop.index - 1].no_of_hours_per_day }}</td>\n               </tr>\n            {% endfor %}\n        </table>\n    \n        {% if doc.sub_department != None %}\n            {% set custom_direct_manager = frappe.db.get_value(\"Department\", doc.sub_department, \"custom_direct_manager\")%}\n        {% else %}\n            {% set custom_direct_manager = frappe.db.get_value(\"Department\", doc.main_department, \"custom_main_department_manager\")%}\n        {% endif %}\n        {% set first_name = frappe.db.get_value(\"Employee\", custom_direct_manager ,\"first_name\")%}\n        {% set designation = frappe.db.get_value(\"Employee\", custom_direct_manager ,\"designation\")%}\n        \n         <p  style='font-size:12pt; color:black; font-weight:bold; line-height:1.5; margin-top:10px;'>\n            {{  designation }} - {{ first_name }}\n        </p>\n        \n         <p  style='font-size:12pt; color:black; font-weight:bold; line-height:1.5; margin-top:15px;'>\n              \u062a\u0645\u062a \u0627\u0644\u0645\u0648\u0627\u0641\u0642\u0629 \u0639\u0644\u0649 \u0647\u0630\u0627 \u0627\u0644\u062a\u0642\u0631\u064a\u0631 \u0627\u0644\u0643\u062a\u0631\u0648\u0646\u064a\u0627\u064b \u0648\u0644\u0627 \u064a\u062d\u062a\u0627\u062c \u0627\u0644\u0649 \u062a\u0648\u0642\u064a\u0639 \u064a\u062f\u0648\u064a\n        </p>\n        \n    </body>\n    \n</html>\n\n\n{% if print_settings.repeat_header_footer %}\n<div id=\"footer-html\">\n    {% if footer %}\n    <div class=\"letter-head-footer\"> {{ footer }} </div>\n    {% endif %}\n    <p class=\"text-center small page-number visible-pdf\">\n        {{ _(\"Page {0} of {1}\").format('<span class=\"page\"></span>', '<span class=\"topage\"></span>') }} </p>\n</div>\n{% endif %}",
